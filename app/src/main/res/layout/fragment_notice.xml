<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffffff"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MeetingFragment.FragmentNotice"
    tools:showIn="@layout/fragment_notice" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#99000000"
        android:id="@+id/bar21" />

    <TextView
        android:text="MEETING HOME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:id="@+id/roomname"
        android:background="#ffffffff"
        android:layout_below="@+id/bar21"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />


    <ImageButton
    android:id="@+id/addnotice"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:scaleType="centerInside"
    android:src="@drawable/plus1"
    android:text="meeting"
        android:layout_marginTop="8dp"
    tools:ignore="ContentDescription,HardcodedText"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="18dp"
    android:layout_alignParentTop="true"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#99000000"
        android:layout_below="@+id/roomname"
        android:id="@+id/bar22"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:id="@+id/flower"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/meetingbackground"
        android:layout_below="@+id/bar22"
        android:scaleType="fitXY" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/reunion"
        android:layout_below="@+id/bar22"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/meeting_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:text="nickname"
        android:textColor="#ffff"
        android:textSize="30sp"
        android:layout_marginBottom="10dp"
        tools:text="hyemin"
        android:layout_below="@+id/profile"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/ann"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="ANNOUNCEMENT"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        tools:text="hyemin"
        android:layout_below="@+id/flower"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#99000000"
        android:layout_below="@+id/ann"
        android:id="@+id/bar23"
        android:layout_marginTop="5dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/bar23"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/listview2"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>



</RelativeLayout>